<?xml version="1.0"?>
<object name="Quote"
        meta_type="Factory-based Type Information with dynamic views"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="plone">
   
 <property name="title" i18n:translate="">Quote</property>
 <property name="description" i18n:translate=""></property>
 <property name="content_icon">Quote.gif</property>
 <property name="content_meta_type">Quote</property>
 <property name="product">UpfrontAccounting</property>
 <property name="factory">addQuote</property>
 <property name="immediate_view">base_view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
   <element value="InvoiceItem"/>
 </property>
 <property name="allow_discussion">False</property>
 <property name="default_view">base_view</property>
 <property name="view_methods">
  <element value="folder_summary_view"/>
  <element value="folder_tabular_view"/>
  <element value="atct_album_view"/>
  <element value="folder_listing"/>
  <element value="base_view"/>
 </property>
 <property name="default_view_fallback">False</property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="view" to="(selected layout)"/>
 <alias from="edit" to="base_edit"/>
 <alias from="sharing" to="@@sharing"/>
 <action title="View" 
         action_id="view"
         category="object" 
         condition_expr=""
         url_expr="string:${object_url}/view" 
         visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" 
         action_id="edit"
         category="object" 
         condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user"
         url_expr="string:${object_url}/edit" 
         visible="True">
  <permission value="Modify portal content"/>
 </action>
 <action title="PDF" 
         i18n:attributes="title"
         action_id="quote_pdf"
         category="document_actions" 
         condition_expr="python:here.meta_type == 'Quote'"
         url_expr="string:${object_url}/quote_pdf" 
         visible="True">
  <permission value="View"/>
 </action>
 <action title="PDF" 
         i18n:attributes="title"
         action_id="invoice_pdf"
         category="document_actions" 
         condition_expr="python:here.meta_type=='Invoice'"
         url_expr="string:${object_url}/invoice_pdf" 
         visible="True">
  <permission value="View"/>
 </action>
 <action title="Send Invoice" 
         i18n:attributes="title"
         action_id="send_invoice_mail"
         category="document_actions" 
         condition_expr="python:here.meta_type=='Invoice'"
         url_expr="string:${object_url}/send_invoice_mail" 
         visible="True">
  <permission value="Modify portal content"/>
 </action>
</object>
